def sum(jidian, xh, name):
    if len(name) != 0:
        dict_sum[xh] = [name[0], jidian[0]]
    return dict_sum


def getexcel(path):
    wb = xlrd.open_workbook(path)  # ÊâìÂºÄÊñá‰ª∂
    sh = wb.sheet_by_name('Âõ¢Âëò‰ø°ÊÅØ')
    dict_sdut = {}
    # Á¨¨‰∏ÄÂàóÁöÑÂÄº
    id = sh.col_values(3)
    name = sh.col_values(2)
    for i in range(1, sh.nrows):
        dict_sdut[name[i]] = [id[i]]
    print(dict_sdut)
    return (dict_sdut)


def getuser(dict_id, dict_num):
    dict_user = {}
    for i in dict_id.keys():
        dict_id[i].append(dict_num[i])
    print(dict_id)
    return dict_id


def gettxt(file):
    dict_sdut = {}
    with open(file, 'r', encoding='utf-8') as f:
        data = f.read().split('\n')
    while '' in data:
        data.remove('')
    for each in data:
        eachone = each.split('-')
        dict_sdut[eachone[1]] = eachone[0]
    print(dict_sdut)
    return dict_sdut


def getpwd(id):
    pwd = id[-6:]
    # print('ÂØÜÁ†ÅÔºö' + str(pwd))
    return pwd


